<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccentWager"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="100dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone" />


    <TextView
        android:id="@+id/mim_4"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@color/dark_gray"
        android:fontFamily="@font/exo_semibold"
        android:gravity="center"
        android:text="@string/must_pick"
        android:textColor="@color/white"
        android:textSize="@dimen/small_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/size_five"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/exo_bold"
                    android:text="PICKS"
                    android:textColor="@color/medium_gray"
                    android:textSize="@dimen/small_size" />

                <TextView
                    android:id="@+id/no_of_picks_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/exo_semibold"
                    android:text="0/10"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/normal_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginStart="17dp"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/exo_semibold"
                    android:text="MULTIPLIER"
                    android:textColor="@color/medium_gray"
                    android:textSize="@dimen/small_size"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/multiplier_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/exo_semibold"
                    android:text="X0"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/normal_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginStart="19dp"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/exo_bold"
                    android:text="WIN PAYOUT"
                    android:textColor="@color/medium_gray"
                    android:textSize="@dimen/small_size" />

                <TextView
                    android:id="@+id/winpayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/exo_semibold"
                    android:text="$0"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/normal_size" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/backBtn"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@color/white"
            android:fontFamily="@font/exo_bold"
            android:gravity="center"
            android:text="BACK"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_size"
            android:visibility="gone" />

        <Button

            android:id="@+id/playBtn1"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@color/white"
            android:fontFamily="@font/exo_bold"
            android:gravity="center"
            android:text="NEXT"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/wg_sep_clr" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">


            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_gray_bg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/ic_token_sm"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/twox"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/exo_extrabolditalic"
                    android:gravity="center"
                    android:text="$2"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/normal_size" />

            </LinearLayout>

            <!--Layout for 5-->
            <LinearLayout
                android:id="@+id/ll_5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_gray_bg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/ic_token_sm"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/fivex"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/exo_extrabolditalic"
                    android:gravity="center"
                    android:text="$3"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/normal_size" />

            </LinearLayout>
            <!-- layout for 10-->
            <LinearLayout
                android:id="@+id/ll_10"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_gray_bg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/ic_token_sm"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tenx"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/exo_extrabolditalic"
                    android:gravity="center"
                    android:text="$4"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/normal_size" />

            </LinearLayout>
            <!-- layout for 15-->
            <LinearLayout
                android:id="@+id/ll_15"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_gray_bg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/ic_token_sm"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/fivteenx"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/exo_extrabolditalic"
                    android:gravity="center"
                    android:text="$5"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/normal_size" />

            </LinearLayout>
            <!-- layout for 20-->
            <LinearLayout
                android:id="@+id/ll_20"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_gray_bg"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/ic_token_sm"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/twentyx"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/exo_extrabolditalic"
                    android:gravity="center"
                    android:text="$20"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/normal_size" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/amt_edt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/edit_border"
                android:fontFamily="@font/exo_extrabold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/normal_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/amt_txt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_gray_bg"
                android:fontFamily="@font/exo_extrabold"
                android:gravity="center"
                android:text="Enter a custom amount"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_size"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/size_five"
                android:layout_weight="1"
                android:background="@drawable/edit_border_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_five"
                android:paddingBottom="@dimen/size_five">

                <ImageView
                    android:id="@+id/f_imag1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/game_badge_win" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_five"
                    android:text="Fixed"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_five"
                android:layout_weight="1"
                android:background="@drawable/edit_border_gray"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_five"
                android:paddingBottom="@dimen/size_five">

                <ImageView
                    android:id="@+id/f_imag2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/game_badge_loss" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_five"
                    android:text="Progressive"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_15" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/exo_bold"
                    android:text="PICKS"
                    android:textColor="@color/medium_gray"
                    android:textSize="@dimen/small_size"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/exo_bold"
                    android:gravity="center"
                    android:text="MULTIPLIER"
                    android:textColor="@color/medium_gray"
                    android:textSize="@dimen/small_size"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/exo_bold"
                    android:gravity="center"
                    android:text="WIN PAYOUT"
                    android:textColor="@color/medium_gray"
                    android:textSize="@dimen/small_size"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:background="@color/wg_sep_clr" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/content_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="6"
                tools:listitem="@layout/picks_layout_single" />


        </LinearLayout>


        <!-- Progeese Start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/exo_bold"
                    android:text="WINS"
                    android:textColor="@color/medium_gray"
                    android:textSize="@dimen/small_size"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/exo_bold"
                    android:gravity="center"
                    android:text="MULTIPLIER"
                    android:textColor="@color/medium_gray"
                    android:textSize="@dimen/small_size"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/exo_bold"
                    android:gravity="center"
                    android:text="WIN PAYOUT"
                    android:textColor="@color/medium_gray"
                    android:textSize="@dimen/small_size"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:background="@color/wg_sep_clr" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/content_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="6"
                tools:listitem="@layout/picks_layout_single" />


        </LinearLayout>


        <!--END-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llAddFunds"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_bg_green"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAddFunds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/exo_extrabold"
                    android:gravity="center"
                    android:text="ADD FUNDS"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_size"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvAddFundsForCash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/exo_semibold"
                    android:gravity="center"
                    android:text="@string/add_funds_to_play_for_cash"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_size"
                    android:visibility="gone" />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/playBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/btn_gray_bg"
                android:clickable="true"
                android:visibility="gone">

                <TextView
                    android:id="@+id/playBtn21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/exo_bold"
                    android:gravity="center"
                    android:text="PLAY"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/normal_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/after_promo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/white"
                android:visibility="gone">

                <EditText
                    android:id="@+id/promo_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_tab_promos_inactive"
                    android:fontFamily="@font/exo_regular"
                    android:gravity="center"
                    android:hint=" BOUNS10"
                    android:inputType="text"
                    android:maxLength="6" />

                <ImageView
                    android:id="@+id/promo_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="-20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/promo_txt"
                    android:src="@drawable/ic_close" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawableStart="@drawable/ic_promo"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/exo_semibold"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:text="@string/have_a_promo_code_enter_it_here"
                    android:textColor="#fff"
                    android:textSize="@dimen/small_size"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvFaq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/exo_regular"
                android:padding="10dp"
                android:text="Not sure how it works? Check our FAQ"
                android:textColor="@android:color/white" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

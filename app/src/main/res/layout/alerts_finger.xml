<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_ten"
    android:paddingTop="@dimen/size_ten"
    android:paddingEnd="@dimen/size_ten"
    android:paddingBottom="@dimen/size_ten">

    <TextView
        android:id="@+id/alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fontFamily="@font/exo_extrabold"
        android:text="Confirm to add funds"
        android:textAllCaps="false"
        android:textColor="@color/header"
        android:textSize="@dimen/txt_size_18"
        tools:ignore="HardcodedText" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/txt_size_20"
        android:gravity="center">

        <ImageView
            android:id="@+id/fingerprintImage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <!--<me.aflak.libraries.view.Fingerprint xmlns:fingerprint="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fingerprint"
            android:layout_width="150dp"
            android:layout_height="150dp"


            fingerprint:circleScanningColor="@android:color/black"
            fingerprint:fingerprintScanningColor="@color/colorAccent" />-->
    </LinearLayout>


    <TextView
        android:id="@+id/paraLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/exo_regular"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:padding="@dimen/size_two"
        android:text="Touch the fingerprint sensor"
        android:textAllCaps="false"
        android:textColor="@color/medium_gray"
        android:textSize="@dimen/txt_size_16"
        tools:ignore="HardcodedText" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="start">

        <TextView
            android:id="@+id/alert_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/exo_extrabold"
            android:gravity="center"

            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/header"
            android:textSize="@dimen/txt_size_14"
            tools:ignore="HardcodedText" />


    </LinearLayout>


</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/llTotal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/cardColor"
            android:layout_width="2dp"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/ivThumbnail_lay"
            android:layout_width="118dp"
            android:layout_height="70dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="118dp"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/ivThumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/frame_playing"
                    android:layout_width="118dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/vm_football" />


                <CheckedTextView
                    android:id="@+id/is_playing_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/exo_bold"
                    android:gravity="center"
                    android:text="Playing"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_size"
                    android:visibility="gone" />

            </RelativeLayout>


        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="start|center"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvVideoName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/exo_extrabolditalic"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="MLB late snack"
                    android:textColor="@color/darkest_gray"
                    android:textSize="@dimen/normal_size" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_weight="2"
                android:gravity="end">


                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="false"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/exo_medium"
                    android:text="03-03"
                    android:textColor="@color/medium_gray"
                    android:textSize="@dimen/small_size" />

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/exo_medium"
                    android:text="1:39"
                    android:textColor="@color/medium_gray"
                    android:textSize="@dimen/small_size" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>

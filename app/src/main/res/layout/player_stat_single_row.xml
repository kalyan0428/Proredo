<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/aorb"
        android:visibility="gone"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/first_player_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/exo_regular"
            android:gravity="left"
            android:text="8.9"
            android:textColor="@color/text_color_new"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/players_positions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/exo_regular"
            android:gravity="center"
            android:text="Center"
            android:textColor="@color/text_color_new"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/second_player_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/exo_regular"
            android:gravity="right"
            android:text="5.6"
            android:textColor="@color/text_color_new"
            android:textSize="@dimen/small_size" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/aorbc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:visibility="visible"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:weightSum="4">


        <TextView
            android:id="@+id/players_p"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/exo_regular"
            android:gravity="center|left"
            android:text="Center"
            android:textColor="@color/text_color_new"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/first_player_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/exo_regular"
            android:gravity="center"
            android:text="8.9"
            android:textColor="@color/text_color_new"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/second_player_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/exo_regular"
            android:gravity="center"
            android:text="5.6"
            android:textColor="@color/text_color_new"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/third_player_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/exo_regular"
            android:gravity="center"
            android:text="5.6"
            android:textColor="@color/text_color_new"
            android:textSize="@dimen/small_size"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>

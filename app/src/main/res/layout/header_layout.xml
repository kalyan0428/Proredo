<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingBottom="@dimen/size_ten">

    <View
        android:id="@+id/viewSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/size_ten"
        android:background="#fff" />

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/ic_baseball"
        android:drawablePadding="12dp"
        android:fontFamily="@font/exo_extrabold"
        android:text="Match"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/txt_size_20" />

    <TextView
        android:id="@+id/tvHeader_Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/tvHeader"
        android:drawablePadding="12dp"
        android:fontFamily="@font/exo_extrabold"
        android:text="How to play"
        android:textColor="@color/sqorr_blue"
        android:textSize="@dimen/txt_size_13"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvViewALL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/exo_semibold"
        android:text="View all"
        android:textColor="@color/medium_gray"
        android:textSize="@dimen/small_size" />


</RelativeLayout>
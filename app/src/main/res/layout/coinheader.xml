<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/prorodeo"
            tools:ignore="ContentDescription" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llUserAvatar"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="@dimen/size_ten"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivUserAvatar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_new"
                tools:ignore="ContentDescription" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llUserTokens"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/size_ten"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rectangle_green"
            android:gravity="center"
            android:minWidth="73dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvUserTokens"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:drawableStart="@drawable/ic_token_sm"
                android:drawablePadding="3dp"
                android:fontFamily="@font/exo_extrabolditalic"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/header"
                android:textSize="@dimen/txt_size_16"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAddFunds"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:visibility="gone">


            <TextView
                android:id="@+id/tvUserCash"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/rectangle_green"
                android:fontFamily="@font/exo_extrabolditalic"
                android:gravity="center"
                android:padding="@dimen/size_five"
                android:text="$10"
                android:textColor="@color/header"
                android:textSize="@dimen/txt_size_16"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/imgProfileAdd"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:background="@drawable/card_win"
                android:contentDescription="@string/add_cash"
                android:scaleType="center"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_add_white" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:background="@drawable/rectangle_green"
        android:gravity="center"
        android:minWidth="61dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_trophy"
            android:contentDescription="@string/_trophy" />

        <TextView
            android:id="@+id/tvUserWins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/exo_extrabolditalic"
            android:gravity="center"
            android:text="22"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_16"
            tools:ignore="HardcodedText" />


    </LinearLayout>


</RelativeLayout>
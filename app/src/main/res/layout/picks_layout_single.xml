<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llPick"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/picks_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:fontFamily="@font/exo_regular"
            android:gravity="start|center"
            android:text="4"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_size" />

        <TextView
            android:id="@+id/multiplier_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:fontFamily="@font/exo_regular"
            android:gravity="center"
            android:text="x10"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_size" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1.3">

        <ImageView
            android:id="@+id/ivTokens"
            android:layout_width="@dimen/txt_size_15"
            android:layout_height="@dimen/txt_size_15"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/tokens_new"/>

        <TextView
            android:id="@+id/winpayout_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo_regular"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="$100"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_size" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/wg_sep_clr" />


</LinearLayout>

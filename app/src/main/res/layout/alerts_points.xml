<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingTop="26dp"
    android:paddingEnd="24dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="end">

        <TextView
            android:id="@+id/alert_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/exo_extrabold"
            android:gravity="center"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/header"
            android:textSize="@dimen/txt_size_14"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/alert_ok"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/exo_regular"
            android:gravity="center"
            android:text="X"
            android:textAllCaps="false"
            android:textColor="@color/header"
            android:textSize="@dimen/txt_size_14"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playerCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/win_loss_statusView_ly"
        android:layout_gravity="center"
        android:background="@drawable/edit_border_gray"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/playerCard"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@color/gray_line"
            android:visibility="visible"
            app:cardCornerRadius="4dp"
            card_view:contentPadding="0dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@color/gray_line">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/size_five">

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/player_img"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="0dp"
                                android:padding="0dp"
                                android:src="@drawable/profile_placeholder"
                                android:scaleType="fitCenter"
                                android:visibility="visible" />

                            <Button
                                android:id="@+id/player_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/player_points_bg"
                                android:fontFamily="@font/exo_extrabold"
                                android:gravity="center"
                                android:minWidth="40dp"
                                android:minHeight="23dp"
                                android:paddingStart="3dp"
                                android:paddingTop="2dp"
                                android:paddingEnd="3dp"
                                android:paddingBottom="2dp"
                                android:text="+04.5"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/txt_size_13"
                                android:visibility="gone" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/player_Name"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exo_bold"
                                android:gravity="center"
                                android:lines="1"
                                android:maxLength="10"
                                android:text="Player name"
                                android:textColor="@color/darkest_gray"
                                android:textSize="@dimen/small_size" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:id="@+id/player_Match"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/exo_bold"
                                    android:gravity="center|start"
                                    android:text="POR vs GCM"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="@dimen/small_size" />

                                <TextView
                                    android:id="@+id/player_place"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="0dp"

                                    android:fontFamily="@font/exo_bolditalic"
                                    android:gravity="center|start"
                                    android:text=" #10"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="@dimen/small_size"
                                    android:visibility="visible" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:id="@+id/player_position"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/exo_bolditalic"
                                    android:text="  #10"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="@dimen/small_size"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/player_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/exo_bold"
                                    android:gravity="center"
                                    android:text="1h 54m"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="@dimen/small_size" />

                                <blink
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/player_time1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/exo_bold"
                                        android:gravity="center"
                                        android:text="1h 54m"
                                        android:textColor="@color/medium_gray"
                                        android:textSize="@dimen/small_size"
                                        android:typeface="serif"
                                        android:visibility="gone" />
                                </blink>
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <!-- RIGHT SIDE CARD-->
        <androidx.cardview.widget.CardView
            android:id="@+id/second_playerCard"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:visibility="visible"
            app:cardCornerRadius="4dp"
            card_view:contentPadding="0dp">


            <RelativeLayout

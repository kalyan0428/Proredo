                android:layout_height="match_parent"
                android:layout_margin="3dp"

                android:background="@color/gray_line">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:weightSum="10">


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/second_player_Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exo_bold"
                                android:gravity="right"
                                android:lines="1"
                                android:maxLength="10"
                                android:text="Player name"
                                android:textColor="@color/darkest_gray"
                                android:textSize="@dimen/small_size" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:gravity="center|right"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:id="@+id/second_player_Match"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/exo_bold"
                                    android:gravity="center|start"
                                    android:text="POR vs GCM"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="@dimen/small_size" />

                                <TextView
                                    android:id="@+id/second_player_place"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="0dp"

                                    android:fontFamily="@font/exo_bolditalic"
                                    android:gravity="center|start"
                                    android:text="  #10"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="@dimen/small_size"
                                    android:visibility="visible" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:gravity="center|right"

                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:id="@+id/second_player_position"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/exo_bolditalic"
                                    android:text="  #10"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="@dimen/small_size"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/second_player_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/exo_bold"
                                    android:gravity="center"
                                    android:text="1h 54m"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="@dimen/small_size" />

                                <blink
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/second_player_time1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/exo_bold"
                                        android:gravity="center"
                                        android:text="1h 54m"
                                        android:textColor="@color/medium_gray"
                                        android:textSize="@dimen/small_size"
                                        android:typeface="serif"
                                        android:visibility="gone" />
                                </blink>
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:padding="@dimen/size_five">

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/second_player_img"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="0dp"
                                android:padding="0dp"
                                android:src="@drawable/profile_placeholder"
                                android:scaleType="fitCenter"
                                android:visibility="visible" />

                            <Button
                                android:id="@+id/second_player_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/player_points_bg"
                                android:fontFamily="@font/exo_extrabold"
                                android:gravity="center"
                                android:minWidth="40dp"
                                android:minHeight="23dp"
                                android:paddingStart="3dp"
                                android:paddingTop="2dp"
                                android:paddingEnd="3dp"
                                android:paddingBottom="2dp"
                                android:text="+04.5"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/txt_size_13"
                                android:visibility="gone" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/right_matchcard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|top"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:id="@+id/frPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_five"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/second_playerCheck"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/size_ten"
                            android:background="@drawable/player_checked"
                            android:button="@null"
                            android:clickable="false" />

                        <CheckBox
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="top|end"
                            android:layout_marginStart="-30dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toEndOf="@+id/second_player_img"
                            android:background="@drawable/player_checked"
                            android:button="@null"
                            android:clickable="false"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_gravity="center"

                                android:padding="2.5dp"
                                android:scaleType="fitCenter"
                                android:visibility="visible" />


                        </RelativeLayout>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="-5dp"
                            android:layout_marginTop="-12dp"
                            android:background="@drawable/player_points_bg"
                            android:fontFamily="@font/exo_extrabold"
                            android:gravity="center"
                            android:minWidth="45dp"
                            android:minHeight="23dp"
                            android:paddingStart="3dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="3dp"
                            android:paddingBottom="2dp"
                            android:text="+04.5"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/txt_size_16" />
                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/frPlayer"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/exo_bold"
                    android:gravity="center"
                    android:lines="1"
                    android:text="Player name"
                    android:textColor="@color/darkest_gray"
                    android:textSize="@dimen/normal_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/exo_bolditalic"
                    android:text="Point guard"
                    android:textColor="@color/medium_gray"
                    android:textSize="@dimen/small_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/exo_bold"
                        android:gravity="center"
                        android:text="POR vs GCM"
                        android:textColor="@color/medium_gray"
                        android:textSize="@dimen/small_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/exo_bold"
                        android:gravity="center"
                        android:text="1h 54m"
                        android:textColor="@color/medium_gray"
                        android:textSize="@dimen/small_size" />

                    <blink
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/exo_bold"
                            android:gravity="center"
                            android:text="1h 54m"
                            android:textColor="@color/medium_gray"
                            android:textSize="@dimen/small_size"
                            android:typeface="serif"
                            android:visibility="gone" />
                    </blink>
                </LinearLayout>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerStatsRcView_child_pts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/size_ten"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_ten"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/exo_bold"
                android:gravity="center|start"
                android:text="71.47"
                android:textColor="@color/header"
                android:textSize="@dimen/small_size"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/exo_regular"
                android:gravity="center"
                android:text="Scoring avg"
                android:textColor="@color/header"
                android:textSize="@dimen/small_size"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/exo_bold"
                android:gravity="center|right"
                android:text="70.37"
                android:textColor="@color/header"
                android:textSize="@dimen/small_size"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_ten"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/exo_bold"
                android:gravity="center|start"
                android:text="40"
                android:textColor="@color/header"
                android:textSize="@dimen/small_size"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/exo_regular"
                android:gravity="center"
                android:text="World rank"
                android:textColor="@color/header"
                android:textSize="@dimen/small_size"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/exo_bold"
                android:gravity="center|right"
                android:text="10"
                android:textColor="@color/header"
                android:textSize="@dimen/small_size"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_ten"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/exo_bold"
                android:gravity="center|start"
                android:text="3.76"
                android:textColor="@color/header"
                android:textSize="@dimen/small_size"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/exo_regular"
                android:gravity="center"
                android:text="Birdies per round"
                android:textColor="@color/header"
                android:textSize="@dimen/small_size"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/exo_bold"
                android:gravity="center|right"
                android:text="4.07"
                android:textColor="@color/header"
                android:textSize="@dimen/small_size"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_ten"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/exo_bold"
                android:gravity="center|start"
                android:text="12"
                android:textColor="@color/header"
                android:textSize="@dimen/small_size"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/exo_regular"
                android:gravity="center"
                android:text="Cuts made"
                android:textColor="@color/header"
                android:textSize="@dimen/small_size"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/exo_bold"
                android:gravity="center|right"
                android:text="11"
                android:textColor="@color/header"
                android:textSize="@dimen/small_size"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_ten"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/exo_bold"
                android:gravity="center|start"
                android:text="3"
                android:textColor="@color/header"
                android:textSize="@dimen/small_size"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/exo_regular"
                android:gravity="center"
                android:text="Top 10"
                android:textColor="@color/header"
                android:textSize="@dimen/small_size"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

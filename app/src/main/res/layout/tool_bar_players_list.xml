<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/match_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:background="@color/extra_light_gray"
    android:gravity="center"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/pro_in"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@color/extra_light_gray"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/toolbar_title_x"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:drawableStart="@drawable/ic_close_white"
            android:drawablePadding="32dp"
            android:ellipsize="end"
            android:fontFamily="@font/exo_semibold"
            android:gravity="start|center"
            android:maxLines="1"
            android:singleLine="true"
            android:text=" MLB late snack"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_size" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/m_cash"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_border_green"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/amount_cash"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:text="$0"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="normal|bold|italic" />

        <ImageView
            android:id="@+id/c_btn"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:background="@drawable/parell_white"
            android:elevation="2dp"
            android:gravity="center"
            android:scaleType="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_add_org" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/m_token"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edit_border_green"
        android:gravity="center"
        android:minWidth="75dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/amount_token"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="20"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="normal|bold|italic" />


    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_cc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccentWager"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/win_loss_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_bold"
                android:text="WIN "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/win_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_bold"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_17" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_bold"
                android:text="PICKS "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/picks_c"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_bold"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_17" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_bold"
                android:text="PAYOUT"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/payout_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_bold"
                android:text=""
                android:layout_marginLeft="5dp"

                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_17" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/lost_ll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/gray"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo_regular"
            android:text="Better luck next time"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_18" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/win_ll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@color/green"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">


        <ImageView
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_win_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo_extrabolditalic"
            android:text="You win!"
            android:textColor="@color/white"
            android:textSize="38sp" />
    </LinearLayout>

</LinearLayout>
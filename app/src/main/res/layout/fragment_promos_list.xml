<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/guest_1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:visibility="visible">


            <ImageView
                android:id="@+id/ivBackground"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/banner_image"
                android:scaleType="fitXY"
                android:src="@drawable/gettyimage1" />

            <ImageView
                android:id="@+id/ivRightImage"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="-20dp"
                android:layout_marginBottom="-15dp"
                android:baselineAlignBottom="false"
                android:contentDescription="@string/dollar_image"
                android:cropToPadding="false"
                android:rotation="20"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_badge_cash"
                android:verticalScrollbarPosition="defaultPosition" />

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvPromoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/exo_extrabolditalic"
                android:text="PLAY FOR CASH NOW"
                android:textSize="@dimen/small_size"
                android:textColor="@color/dark_gray" />
            <TextView
                android:id="@+id/tvPromoBonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/exo_extrabold"
                android:text="$5 Sign-up bonus"
                android:textAllCaps="false"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/txt_size_28" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#EAEAEA"
               />
            <TextView
                android:id="@+id/tvData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/exo_regular"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/txt_size_16"
                android:text="Jump into Play Sqor and get started with a $5 bonus! Offer for new sign ups only."
                 />
            <TextView
                android:id="@+id/tvRedeem"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_bg_red"
                android:fontFamily="@font/exo_bold"
                android:gravity="center"
                android:text="REDEEM"
                android:textColor="#FFF"
                android:textSize="@dimen/normal_size"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="380dp"
        android:id="@+id/guest_2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:visibility="visible">


            <ImageView
                android:id="@+id/ivBackgroundc"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/banner_image"
                android:scaleType="centerCrop"
                android:src="@drawable/promo_photo" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="-20dp"
                android:layout_marginBottom="-15dp"
                android:baselineAlignBottom="false"
                android:contentDescription="@string/dollar_image"
                android:cropToPadding="false"
                android:rotation="20"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_badge_cash"
                android:verticalScrollbarPosition="defaultPosition" />

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvPromoTitleC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/exo_extrabolditalic"
                android:text="NFL VETERANS PROMOTION"
                android:textSize="@dimen/small_size"
                android:textColor="@color/dark_gray" />
            <TextView
                android:id="@+id/tvPromoC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/exo_extrabold"
                android:text="100% Deposit Match up to $25"
                android:textAllCaps="false"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/txt_size_28" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#EAEAEA"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/exo_regular"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/txt_size_16"
                android:text="Use promo code NFLVETS and receive a 100% match of your deposit up to $25."
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tvpplay"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_bg_red"
                    android:fontFamily="@font/exo_bold"
                    android:gravity="center"
                    android:text="REDEEM"
                    android:textColor="#FFF"
                    android:textSize="@dimen/normal_size"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvpplaymore"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_bg_red"
                    android:fontFamily="@font/exo_bold"
                    android:gravity="center"
                    android:text="LEARN MORE"
                    android:textColor="#FFF"
                    android:textSize="@dimen/normal_size"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/user_login"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:visibility="visible">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/banner_image"
                android:scaleType="fitXY"
                android:src="@drawable/gettyimage1" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="-20dp"
                android:layout_marginBottom="-15dp"
                android:baselineAlignBottom="false"
                android:contentDescription="@string/dollar_image"
                android:cropToPadding="false"
                android:rotation="20"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_badge_cash"
                android:verticalScrollbarPosition="defaultPosition" />

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/exo_extrabolditalic"
                android:text="REFER A FRIEND "
                android:textSize="@dimen/small_size"
                android:textColor="@color/dark_gray" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/exo_extrabold"
                android:text="Get a Match up to $20"
                android:textAllCaps="false"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/txt_size_25" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#EAEAEA"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/exo_regular"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/txt_size_16"
                android:text="Refer a friend and get a match of their first deposit up to $20! Invite more friends and get more money to play!"
                />
            <TextView
                android:id="@+id/tvRefer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_bg_red"
                android:fontFamily="@font/exo_bold"
                android:gravity="center"
                android:text="REFER A FRIEND"
                android:textColor="#FFF"
                android:textSize="@dimen/normal_size"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="200dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="4dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Banner image"
            android:scaleType="fitXY"
            android:src="@drawable/gettyimage1"
            card_view:layout_constraintBottom_toTopOf="@+id/contentCaption"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:baselineAlignBottom="false"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="-15dp"
            android:layout_marginEnd="-20dp"
            android:contentDescription="Dollar image"
            android:cropToPadding="false"
            android:rotation="17"
            android:scaleType="fitEnd"
            android:verticalScrollbarPosition="defaultPosition"
            android:src="@drawable/ic_badge_cash"
            card_view:layout_constraintBottom_toBottomOf="@+id/imageView"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.78"
            card_view:layout_constraintStart_toEndOf="@+id/imageView"
            card_view:layout_constraintVertical_bias="0.78" />




        <TextView
            android:id="@+id/contentCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/exo_semibold"
            android:text="NBA Championships"
            android:textAllCaps="true"
            android:textSize="@dimen/small_size"
            android:textColor="@color/header"
            card_view:layout_constraintBottom_toTopOf="@+id/cardView"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.09"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/imageView"
            card_view:layout_constraintVertical_bias="0.52"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/contentMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/exo_extrabold"
            android:text="$10 Bonus winnings"
            android:textAllCaps="false"
            android:textColor="@color/header"
            android:textSize="@dimen/txt_size_20"
            card_view:layout_constraintBottom_toTopOf="@+id/textView"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.04"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/contentCaption" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/exo_regular"
            android:textColor="#212121"
            android:textSize="@dimen/txt_size_18"
            android:text="Receive an extra $10 on top of any winnings while playing NBA cards"
            card_view:layout_constraintBottom_toTopOf="@+id/btnRedeem"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/contentMain" />

        <Button
            android:id="@+id/btnRedeem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_bg_red"
            android:fontFamily="@font/exo_bold"
            android:text="Redeem"
            android:textColor="@android:color/white"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/textView"
            card_view:layout_constraintVertical_bias="0.192" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#EAEAEA"
            card_view:layout_constraintBottom_toTopOf="@+id/textView"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/contentMain" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

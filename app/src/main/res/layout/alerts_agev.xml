<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingTop="26dp"
    android:paddingEnd="24dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_ten"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/age_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:fontFamily="@font/exo_extrabold"
            android:gravity="center"
            android:text="Verify Age"
            android:textAllCaps="false"
            android:textColor="@color/header"
            android:textSize="@dimen/txt_size_15"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/age_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:fontFamily="@font/exo_regular"
            android:gravity="center"
            android:text="close"
            android:textAllCaps="false"
            android:textColor="@color/header"
            android:textSize="@dimen/txt_size_13"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fontFamily="@font/exo_extrabold"
        android:text="Please Select ID Proof Type"
        android:textAllCaps="false"
        android:textColor="@color/header"
        android:textSize="@dimen/txt_size_14"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size_five"
        android:layout_height="@dimen/_50dp"
        android:background="@drawable/edit_border_gray"
        android:padding="@dimen/size_five">

        <Spinner
            android:id="@+id/proof_spin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/exo_extrabold"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_17"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/l_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="@dimen/size_ten"
            android:background="@drawable/edit_border_gray"
            android:padding="@dimen/size_five"
            android:tooltipText="Front Image" />

        <ImageView
            android:id="@+id/r_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="@dimen/size_ten"
            android:background="@drawable/edit_border_gray"

            android:padding="@dimen/size_five"
            android:tooltipText="Back Image" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/age_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/exo_regular"
            android:gravity="center|start"
            android:lineSpacingExtra="3dp"
            android:padding="@dimen/size_two"
            android:text="Please ensure the below requirements are being met:"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_13"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/exo_regular"
            android:gravity="center|start"
            android:lineSpacingExtra="3dp"

            android:padding="@dimen/size_two"
            android:text="* Images are being captured with a mobile device, with at least a 5 MP camera."
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/small_size"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/exo_regular"
            android:gravity="center|start"
            android:lineSpacingExtra="3dp"
            android:padding="@dimen/size_two"
            android:text="* Resolution is at least 2048 x 1536 and image format is yield at least 90% quality."
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/small_size"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/exo_regular"
            android:gravity="center|start"
            android:lineSpacingExtra="3dp"
            android:padding="@dimen/size_two"
            android:text="* There is at least a 10% border around the top, bottom and sides of the document."
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/small_size"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/exo_regular"
            android:gravity="center|start"
            android:lineSpacingExtra="3dp"
            android:padding="@dimen/size_two"
            android:text="* There is no flash (causing glare) or shadow over the barcode or front of the DL."
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/small_size"
            tools:ignore="HardcodedText" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="end">

        <TextView
            android:id="@+id/age_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/login_bg_disable"
            android:fontFamily="@font/exo_extrabold"
            android:gravity="center"
            android:text="process"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/btn_dis_text"
            android:textSize="@dimen/normal_size"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>

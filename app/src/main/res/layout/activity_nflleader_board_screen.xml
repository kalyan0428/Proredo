<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_sub_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBF1EF"
    tools:context=".views.ProfileEdit">

    <include
        android:id="@+id/tt"
        layout="@layout/custom_toolbar_layout" />


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tt"
        android:background="@drawable/radius_ll"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txt_size_16"
            android:layout_marginTop="@dimen/size_five"
            android:layout_marginRight="@dimen/txt_size_16"
            android:background="@drawable/pink_out_line"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="1dp"
            android:weightSum="2">


            <RadioGroup
                android:id="@+id/toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/txt_size_16"
                android:layout_marginTop="@dimen/txt_size_16"
                android:layout_marginRight="@dimen/txt_size_16"
                android:background="@drawable/pink_out_line"
                android:checkedButton="@+id/offer"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_widget_background_leader"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="@dimen/size_ten"
                    android:text="Biggest Winners" />

                <RadioButton
                    android:id="@+id/offer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_widget_background_leader"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Highest Scoring" />
            </RadioGroup>

            <Button
                android:id="@+id/bw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_border_header"
                android:fontFamily="@font/exo_extrabold"
                android:text="Biggest Winners"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="visible" />

            <Button
                android:id="@+id/hs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_border_header"
                android:fontFamily="@font/exo_extrabold"
                android:text="Highest Scoring"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_top3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/ll_top"
            android:background="@drawable/won_bgimage"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="@dimen/size_five"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/ivImage3"
                        android:layout_width="99dp"
                        android:layout_height="99dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ranking_cirle_img3"
                        android:padding="5dp"
                        android:src="@drawable/game_inactive_placeholder" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="38dp"
                        android:layout_marginTop="95dp"
                        android:background="@drawable/ranking_cirle3"
                        android:fontFamily="@font/exo_extrabold"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/black"
                        android:textSize="30px" />


                </FrameLayout>

                <TextView
                    android:id="@+id/tvName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/exo_extrabold"
                    android:text="abc"
                    android:textColor="@color/header"
                    android:textSize="@dimen/txt_size_16"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivImagec"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="-10dp"
                    android:src="@drawable/won_crown" />

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/ivImage1"
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ranking_cirle_img1"
                        android:padding="5dp"
                        android:src="@drawable/game_inactive_placeholder" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="58dp"
                        android:layout_marginTop="140dp"
                        android:background="@drawable/ranking_cirle1"
                        android:fontFamily="@font/exo_extrabold"
                        android:gravity="center"

                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="30px" />


                </FrameLayout>

                <TextView
                    android:id="@+id/tvName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/exo_extrabold"
                    android:text="abc"
                    android:textColor="@color/header"
                    android:textSize="@dimen/txt_size_16"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/ivImage2"
                        android:layout_width="99dp"
                        android:layout_height="99dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ranking_cirle_img2"
                        android:padding="5dp"
                        android:src="@drawable/game_inactive_placeholder" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="38dp"
                        android:layout_marginTop="95dp"
                        android:background="@drawable/ranking_cirle2"
                        android:fontFamily="@font/exo_extrabold"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textSize="30px" />


                </FrameLayout>

                <TextView
                    android:id="@+id/tvName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/exo_extrabold"
                    android:text="abc"
                    android:textColor="@color/header"
                    android:textSize="@dimen/txt_size_16"
                    android:visibility="gone" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <View
        android:id="@+id/view_sep3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll"
        android:background="#ededed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_sep3"
        android:layout_marginTop="-20dp"
        android:orientation="vertical"
        android:padding="@dimen/size_five"
        android:weightSum="10">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/leaderList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="8.2"
            android:visibility="visible">

        </androidx.recyclerview.widget.RecyclerView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardLL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/txt_size_16"
            android:layout_marginRight="@dimen/txt_size_16"
            android:layout_weight="1.8"
            android:visibility="visible"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/llleader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/size_five">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:id="@+id/tvrank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/size_five"
                        android:fontFamily="@font/exo_regular"
                        android:text="-"
                        android:textColor="@color/header"
                        android:textSize="@dimen/txt_size_13" />

                    <ImageView
                        android:id="@+id/ivCard"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/size_five"
                        android:layout_toEndOf="@+id/tvrank"
                        android:src="@drawable/game_inactive_placeholder" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size_ten"
                        android:layout_toEndOf="@+id/ivCard"
                        android:ellipsize="end"
                        android:fontFamily="@font/exo_regular"
                        android:gravity="start|center"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="text"
                        android:textColor="@color/header"
                        android:textSize="@dimen/txt_size_14" />

                    <TextView
                        android:id="@+id/tvvalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/exo_regular"
                        android:text=""
                        android:textColor="@color/header"
                        android:textSize="@dimen/txt_size_13" />

                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>